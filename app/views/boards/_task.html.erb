<div class="card mb-0" >
  <div class="card-body p-3">
    <small class="float-right text-muted"><%= task.due_date%></small>
    <span class="badge badge-secondary"><%= task.status%></span>
    <h5 class="mt-2 mb-2">
    <%= link_to task.name, task_path(task), remote: true, data: {toggle: "modal", target: "#task-detail-modal"}  %>
    </h5>
    <p class="mb-0">
      <span class="text-nowrap mb-2 d-inline-block">
          <b>Description:<%= task.description%></b>
      </span>
    </p>
    <div class="dropdown float-right">
      <a href="#" class="dropdown-toggle text-muted arrow-none" data-toggle="dropdown" aria-expanded="false">
          <i class="mdi mdi-dots-vertical font-18"></i>
      </a>
    </div>
  </div> <!-- end card-body -->
</div>
<div class="modal hide fade" id="myModal" tabindex="-1" role="dialog">Loading...</div>